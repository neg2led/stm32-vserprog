    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceRoot}",
            "executable": "./stm32-vserprog.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "stutil",
            "interface": "swd",
            "runToMain": true,
            "toolchainPrefix": "arm-none-eabi-",
            "gdbPath": "/usr/bin/arm-none-eabi-gdb",
            "preLaunchCommands": ["make BOARD=xtw2"]
        }
    ]
}
